# tests/__init__.py
# This file can be empty but is required to mark the directory as a package.

```

```python
# tests/test_app.py
import pytest
from my_flask_app import create_app

@pytest.fixture
def client():
    app = create_app()
    app.config['TESTING'] = True

    with app.test_client() as client:
        yield client

def test_home_page(client):
    response = client.get('/')
    assert response.status_code == 200
    assert b'Welcome' in response.data

```

```python
# tests/test_routes.py
import pytest

def test_example_route(client):
    response = client.get('/example')
    assert response.status_code == 200
    assert b'Example' in response.data

```

```python
# tests/test_models.py
import pytest
from my_flask_app.models import MyModel

def test_model_creation():
    model_instance = MyModel(name='Test')
    assert model_instance.name == 'Test'
```

